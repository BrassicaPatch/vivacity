@page
@model Vivacity.Pages.Machines.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Machine</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Machine.ID" />
            <div class="form-group">
                <label asp-for="Machine.MachineType" class="control-label"></label>
                <input asp-for="Machine.MachineType" class="form-control" />
                <span asp-validation-for="Machine.MachineType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.ModelNumber" class="control-label"></label>
                <input asp-for="Machine.ModelNumber" class="form-control" />
                <span asp-validation-for="Machine.ModelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.PurchaseDate" class="control-label"></label>
                <input asp-for="Machine.PurchaseDate" class="form-control" />
                <span asp-validation-for="Machine.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.PurchaseCost" class="control-label"></label>
                <input asp-for="Machine.PurchaseCost" class="form-control" />
                <span asp-validation-for="Machine.PurchaseCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Machine.Plant" class="control-label"></label>
                <select asp-for="Machine.PlantID" class="form-control" asp-items="Model.Plants"></select>
                <span asp-validation-for="Machine.PlantID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
